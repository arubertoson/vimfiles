{
  // coc settings

  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.maxHeight": 15,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },

  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "",
  "coc.preferences.formatOnType": false,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSaveFiletypes": [
     "go",
     "python",
     "json",
     "cpp",
     "h"
  ],

  // --------------------------------------------------------------------------------
  // Diagnostics
  // --------------------------------------------------------------------------------

  // "diagnostic.enable": false,
  "diagnostic.infoSign":            "»",
  "diagnostic.hintSign":            "»",
  "diagnostic.warningSign":         "»",
  "diagnostic.errorSign":           "»",
  "diagnostic.enable":              true,
  "diagnostic.signOffset":          9999999,
  "diagnostic.highlightOffset":     9999999,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  // Diagnostic Plug

  "diagnostic-languageserver.debug": false,
  "diagnostic-languageserver.formatters": {
    "gofumports": {
      "command": "gofumports",
      "args": ["-e"],
      "isStderr": true,
      "isStdout": true
    },
    "jsonfmt": {
      "command": "prettier",
      "args": ["--parser", "json"],
      "isStdout": true,
      "isStderr": false
    },
    "clangfmt": {
        "command": "clang-format"
    }
  },

  "diagnostic-languageserver.formatFiletypes": {
    "go": "gofumports",
    "json": "jsonfmt",
    "cpp": "clangfmt",
    "hpp": "clangfmt"
  },

  "diagnostic-languageserver.filetypes": {
    "go": ["golangci-lint"]
  },


  "tabnine.disable_filetypes": [".*data.*"],
  "yank.highlight.duration": 200,

  "suggest.noselect": false,
  "suggest.autoTrigger": "trigger",
  "suggest.echodocSupport": false,
  "suggest.maxCompleteItemCount": 12,
  "suggest.minTriggerInputLength": 2,
  "suggest.enablePreselect": true,

  "signature.enable": true,
  "signature.target": "float",
  "codeLens.enable": false,

  // Language Specific

  "python.jediEnabled": false,
  "python.pythonPath": "/scratch/.conda/envs/nvim3/bin/python3",

  "clangd.semanticHighlighting": true,

  "languageserver": {
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh"],
      "cwd": "./",
      "initializationOptions": {},
      "ignoredRootPaths": ["~"],
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "gopls",
      "args": [],
      "trace.server": "verbose",
      "rootPatterns": [
        "go.mod",
        ".git/",
        ".hg/"
      ],
      "requireRootPattern": true,
      "filetypes": [
        "go"
      ]
    }
  }
}
